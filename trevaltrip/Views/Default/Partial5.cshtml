@using TrevalTripProject.Models.Siniflar
@model List<Blog>
@{
    Layout = null;
}
<div class="box1-left">

    @foreach (var b in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetay/@b.ID"><img src="@b.BlogImage" alt="" /></a>

        </div>
        <div class="bot-desc">
            <p>@b.Aciklama.Substring(0, 83) </p>
        </div>
        <div class="clear"></div>
    }
</div>