@using TrevalTripProject.Models.Siniflar
@model List<Blog>
@{
    Layout = null;
}

@foreach (var p in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@p.BlogImage" alt="" style="width:304px; height:172px;"/>
        </div>
        <div class="left-text">

            <h4>@p.Baslik</h4>
            <span class="doller">@p.Tarih.ToString("dd/MM/yyyy")</span>
            <p>@p.Aciklama.Substring(0, 75)</p>
            <p><a href="/Blog/BlogDetay/@p.ID"><span class="read">Devamını Oku</span></a></p>
        </div>
    </div>

}
