@using TrevalTripProject.Models.Siniflar
@model List<Iletisim>
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Iletişim Formu Listesi</h2>

<table id="tableblogs" class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                AD SOYAD
            </th>
            <th>
                MAİL
            </th>
            <th>
                KONU
            </th>

            <th>
                MESAJ
            </th>

            <th>
                SİL
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.ID</td>
                <td>@b.AdSoyad.ToString()</td>
                <td>@b.Konu</td>
                <td>@b.Mail</td>
                <td>@b.Mesaj</td>
                <td>@Html.ActionLink("Sil", "IletisimSil", new { id = b.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })</td>


            </tr>
        }
    </tbody>
</table>




<link href="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.13.4/datatables.min.css" rel="stylesheet" />

<script type="text/javascript" src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js">

</script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
<script>
    $('#tableblogs').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });
</script>