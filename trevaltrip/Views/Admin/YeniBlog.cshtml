@model TrevalTripProject.Models.Siniflar.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekle</h2>
<br />
<form class="form-group" method="post">

    @Html.LabelFor(x => x.Baslik)
    @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color:red" })
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.ValidationMessageFor(x => x.Tarih, "", new { @style = "color:red" })
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.ValidationMessageFor(x => x.BlogImage, "", new { @style = "color:red" })

    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.ValidationMessageFor(x => x.Aciklama, "", new { @style = "color:red" })

    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary" type="submit">Blog Ekle</button>
</form>

