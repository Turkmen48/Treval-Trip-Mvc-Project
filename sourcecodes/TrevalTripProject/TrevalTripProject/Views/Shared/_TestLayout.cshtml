
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Treval Trip Project @ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/web/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/web/js/jquery.min.js"></script>
    <script src="~/web/js/responsiveslides.min.js"></script>

    <script>
        // You can also use "$(window).load(function() {"
        $(function () {
            // Slideshow 1
            $("#slider1").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
            });
        });
    </script>
</head>
<body>
    <div class="header">
        <div class="wrap">
            <div class="logo"><a href="/Default/Index"><img src="~/web/images/logo.png" alt="" /></a></div>
            <div class="con-right">
                <div class="grid1-l-img">
                    <img src="~/web/images/contact.png" alt="">
                </div>
                <div class="grid1-l-desc">
                    <p>Whatsapp : +91 00000-55555</p>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="header-bottom">
        <div class="wrap">
            <ul id="nav">
                <li><a href="/Default/Index">Anasayfa</a></li>
                <li><a class="hsubs" href="/About/Index">Hakkımızda</a></li>
                <li>
                    <a class="hsubs" href="/Blog/Index">Rehber</a>
                 
                </li>
                <li><a class="hsubs" href="/Blog/Index">Blogum</a></li>
                <li><a href="/Contact/Index">İletişim</a></li>
            </ul>
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    <div class="footer-bottom">
        <div class="wrap">
           
            <div class="copy">
                <p>&copy; <span id="tarihYil"></span> Treval Trip. Tüm Hakları Saklıdır | <a href="https://github.com/Turkmen48/">Enes Durmuş</a> Tarafından Geliştirildi</p>
            </div>
            <script>
                const d = new Date();
                let year = d.getFullYear();
                document.getElementById("tarihYil").innerHTML = year;
            </script>
        </div>
    </div>
</body>
</html>
