@using TrevalTripProject.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="header-banner">
    <div class="wrap">
        <div class="banner">
            <div class="indent">
                <h2 class="indent-left margin-bot" style="margin-left:80px;">Tatil & Seyahat Bloğum</h2>
                <div class="banner-left">
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/glass.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Restoranlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/flight.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Uçuşlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/group.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Yapılacak Şeyler</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/key.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Araba Kiralama</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom_right_images">

                    <div class="slider">
                        <ul class="rslides" id="slider1">
                            @foreach (var i in Model)
                            {
                                <li><img src="@i.BlogImage" alt="" style="width:650px; height:400px;"></li>
                            }
                            
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class"content">
    <div class="wrap">
        <div class="wrapper">
            <div class="con-top">
                <h3>Treval Trip'e Hoş Geldiniz!</h3>
                <p>Seyahat sitemiz, dünya genelindeki en popüler ve özgün tatil rotalarını keşfetmenize yardımcı olur. Size özel seyahat planları, öneriler, gezginlerin yorumları ve en uygun fiyatlarla unutulmaz bir tatil deneyimi için sitemizi ziyaret edin.</p>
            </div>
            @Html.Action("Partial1","Default")
            <div class="grids">
                <div class="box1">
                    @Html.Action("Partial3","Default")
                    @Html.Action("Partial4","Default")
                    
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>

